<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:padding="@dimen/medium_spacing"
    android:gravity="center_horizontal"
    tools:context=".quiz.presentation.QuizFragment">

    <TextView
        android:id="@+id/textViewQuestion"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        tools:text="What is 2 + 2?" />

    <TextView
        android:id="@+id/textViewHint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
        tools:text="@string/current_points_with_time_left"/>

    <ImageView
        android:id="@+id/imageViewHint"
        android:layout_marginVertical="@dimen/small_spacing"
        android:layout_width="match_parent"
        android:contentDescription="@string/quiz_image_hint"
        android:layout_height="0dp"
        tools:src="@drawable/marathon"
        android:scaleType="centerCrop"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/buttonAnswer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="4"/>

    <Button
        android:id="@+id/buttonAnswer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="3"/>

    <Button
        android:id="@+id/buttonAnswer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="8"/>

</LinearLayout>